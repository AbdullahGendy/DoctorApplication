<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">


    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp" />

    <com.company.doctorapplication.Utills.MyTextViewBold

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Reservations"
        android:textColor="@color/colorPrimaryDark"

        android:textSize="@dimen/_17ssp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp" />

    <com.company.doctorapplication.Utills.MyTextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/_10sdp"
        android:text="Pick The Clinic:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_11ssp" />


    <Spinner
        android:id="@+id/spinner_clinic"
        style="@style/spinner_style"
        android:layout_width="match_parent"
        android:layout_height="?attr/dropdownListPreferredItemHeight"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_15sdp" />

    <com.company.doctorapplication.Utills.MyTextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/_10sdp"
        android:text="Pick The Day:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_11ssp" />


    <Spinner
        android:id="@+id/spinner_Day"
        style="@style/spinner_style"
        android:layout_width="match_parent"
        android:layout_height="?attr/dropdownListPreferredItemHeight"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp" />


    <com.company.doctorapplication.Utills.ButtonBold
        android:id="@+id/Check_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/shape_login_background"
        android:gravity="center"
        android:text="Check"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp" />

    <com.company.doctorapplication.Utills.MyTextView
        android:id="@+id/after_check_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="start"
        android:padding="@dimen/_5sdp"
        android:text=""
        android:visibility="gone"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_10ssp" />

    <com.company.doctorapplication.Utills.ButtonBold
        android:id="@+id/Reserve_button"
        android:visibility="gone"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/shape_login_background"
        android:gravity="center"
        android:text="Reserve"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp" />

</LinearLayout>